{
	"extends":
	[
		"eslint:recommended"
	],
	"rules":
	{
		"brace-style":
		[
			"error",
			"allman"
		],
		"indent":
		[
			"error",
			"tab",
			{
				"CallExpression":
				{
					"arguments": "off"
				},
				"ignoredNodes":
				[
					"ConditionalExpression",
					"MemberExpression"
				]
			}
		],
		"object-shorthand": "error"
	}
}