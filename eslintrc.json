{
	"extends":
	[
		"eslint:recommended"
	],
	"rules":
	{
		"brace-style":
		[
			"error",
			"allman"
		],
		"comma-dangle": "error",
		"comma-spacing": "error",
		"indent":
		[
			"error",
			"tab",
			{
				"CallExpression":
				{
					"arguments": "off"
				},
				"ignoredNodes":
				[
					"ConditionalExpression",
					"MemberExpression"
				]
			}
		],
		"newline-after-var": "error",
		"no-var": "error",
		"object-shorthand": "error",
		"semi": "error"
	}
}
